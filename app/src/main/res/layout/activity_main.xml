    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/scanButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan QR Code"
            android:backgroundTint="#6200EE"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:padding="14dp"
            android:elevation="2dp"
            />

        <Button
            android:id="@+id/viewCustomersButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View All Customers"
            android:backgroundTint="#6200EE"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:padding="14dp"
            android:elevation="2dp"
           />
    </LinearLayout>

    <EditText
        android:id="@+id/customerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Customer Name"
        android:padding="14dp"
        android:background="@drawable/edit_text_background"
        android:textSize="18sp"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/companyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Company Name"
        android:padding="14dp"
        android:background="@drawable/edit_text_background"
        android:textSize="18sp"
        android:layout_marginBottom="12dp"/>



    <EditText
        android:id="@+id/batteryModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contact number"
        android:padding="14dp"
        android:background="@drawable/edit_text_background"
        android:textSize="18sp"
        android:inputType="number"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/batteryQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Battery Quantity"
        android:inputType="number"
        android:padding="14dp"
        android:background="@drawable/edit_text_background"
        android:textSize="18sp"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/vehicleNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Battery Ampere"
        android:padding="14dp"
        android:background="@drawable/edit_text_background"
        android:textSize="18sp"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/comingDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Coming Date"
        android:padding="14dp"
        android:background="@drawable/edit_text_background"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <!-- Image Upload Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Images"
        android:textSize="20sp"
        android:textColor="#6200EE"
        android:layout_marginBottom="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/addImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Image"
            android:backgroundTint="#6200EE"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:paddingHorizontal="18dp"
            android:paddingVertical="12dp"
            android:elevation="2dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/imageContainer"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:layout_marginStart="12dp"
                android:background="@drawable/scroll_view_background"/>

    </LinearLayout>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit and Generate QR"
        android:backgroundTint="#6200EE"
        android:textSize="16sp"
        android:textColor="@color/white"

        android:padding="14dp"
        android:elevation="2dp"
        android:layout_marginBottom="12dp"/>



</LinearLayout>